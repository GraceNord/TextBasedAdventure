from __future__ import print_function
import random

playerItems = []
enteredRooms = []
openedDoors = []
likability = False

def cellB():
    global enteredRooms
    print('You entered Room 2')
    if 'room2' in enteredRooms:
        print('This room looks vaguely familiar')
    if 'room2' not in enteredRooms:
        enteredRooms += ['room2']

